{
	"extends": ["solhint:recommended"],
	"rules": {
		"prettier/prettier": "error",
		"avoid-throw": false,
		"avoid-suicide": "error",
		"avoid-sha3": "warn",
		"quotes": "single",
		"not-rely-on-time": "off",
		"compiler-version": ["error", "^0.8"],
		"reason-string": ["warn", { "maxLength": 64 }]
	},
	"plugins": ["prettier"]
}
